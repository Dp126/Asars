<div id="login">
  <div class="lpanel">
    <div class="panel">
      <img src="" alt="">
      <center><h4>Forgot your password?</h4></center>
      <form>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    			<%= devise_error_messages! %>

    			<div class="field">
      			<%= f.email_field :email, autofocus: true, :placeholder => "Email", :required => true  %>
    			</div>

    			<div class="actions">
      			<%= f.submit "Reset Password" %>
    			</div>
  			<% end %>
      </form>
      <h5><%= render "devise/shared/links" %></h5>
    </div>
  </div>
  <footer>Copyright 2015 Conception Midea Inc. Powered by Triste. All Rights Reserved.</footer>
</div>